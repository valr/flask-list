<tr>
    <td class="align-middle">
        {{ ci[item].name }}
    </td>
    <td class="align-middle text-center item-value">
        {% if ci[list_item].type_|string() == "ListItemType.selection" %}
            {% if ci[list_item].selection is false %}
                <a class="item-selection btn btn-block bg-transparent text-dark"
                    data-item-id="{{ ci[list_item].item_id }}"
                    data-version-id="{{ ci[list_item].version_id }}">
                    {{ render_icon('square') }}
                </a>
            {% elif ci[list_item].selection is true %}
                <a class="item-selection btn btn-block btn-success text-white"
                    data-item-id="{{ ci[list_item].item_id }}"
                    data-version-id="{{ ci[list_item].version_id }}">
                    {{ render_icon('check-square') }}
                </a>
            {% endif %}
        {% elif ci[list_item].type_|string() == "ListItemType.number" %}
            <div class="input-group flex-nowrap">
            <div class="input-group-prepend">
            <button class="item-number-minus btn btn-light border shadow-none"
                    data-item-id="{{ ci[list_item].item_id }}"
                    type="button">âˆ’</button>
            </div>
            <input class="item-number form-control bg-white border shadow-none text-center"
                    data-item-id="{{ ci[list_item].item_id }}"
                    data-version-id="{{ ci[list_item].version_id }}"
                    value="{{ ci[list_item].number if ci[list_item].number != 0.0 }}"
                    maxlength="1000"
                    type="text">
            <div class="input-group-append">
            <button class="item-number-plus btn btn-light border shadow-none"
                    data-item-id="{{ ci[list_item].item_id }}"
                    type="button">+</button>
            </div>
            </div>
        {% elif ci[list_item].type_|string() == "ListItemType.text" %}
            <input class="item-text form-control bg-white border shadow-none"
                    data-item-id="{{ ci[list_item].item_id }}"
                    data-version-id="{{ ci[list_item].version_id }}"
                    value="{{ ci[list_item].text }}"
                    maxlength="1000"
                    type="text">
        {% endif %}
    </td>
</tr>
