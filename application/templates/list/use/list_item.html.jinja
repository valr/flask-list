<tr>
    <td class="align-middle">
        {{ ci[item].name }}
    </td>
    <td class="align-middle text-center">
        {% if ci[list_item].type_|string() == "ListItemType.selection" %}
            {% if ci[list_item].selection is false %}
                <a class="btn btn-block bg-transparent text-dark"
                    data-item-id="{{ ci[list_item].item_id }}"
                    data-version-id="{{ ci[list_item].version_id }}">
                    {{ render_icon('square') }}
                </a>
            {% elif ci[list_item].selection is true %}
                <a class="btn btn-block btn-success text-white"
                    data-item-id="{{ ci[list_item].item_id }}"
                    data-version-id="{{ ci[list_item].version_id }}">
                    {{ render_icon('check-square') }}
                </a>
            {% endif %}
        {% elif ci[list_item].type_|string() == "ListItemType.counter" %}
            <div class="input-group">
                <div class="input-group-prepend">
                    <button class="btn bg-white border shadow-none" type="button" id="btn-minus">âˆ’</button>
                </div>
                <input class="form-control bg-white border shadow-none text-center" type="text">
                <div class="input-group-append">
                    <button class="btn bg-white border shadow-none" type="button" id="btn-plus">+</button>
                </div>
            </div>
        {% elif ci[list_item].type_|string() == "ListItemType.text" %}
            <input class="form-control bg-white border shadow-none"
                    data-item-id="{{ ci[list_item].item_id }}"
                    data-version-id="{{ ci[list_item].version_id }}"
                    value="{{ ci[list_item].text }}"
                    type="text">
        {% endif %}
    </td>
</tr>
