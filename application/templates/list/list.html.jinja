{% extends 'base.html.jinja' %}
{% from 'bootstrap/utils.html' import render_icon %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-sm mt-3 mb-0">
            <thead class="table-primary text-white">
                <tr>
                    <th class="col-9 align-middle">
                        List
                    </th>
                    <th class="col-1 align-middle text-center">
                        Items
                    </th>
                    <th class="col-1 align-middle text-center text-nowrap">
                        Actions
                        <a class="btn btn-primary btn-sm text-white"
                            href="{{ url_for('list.create') }}">
                            {{ render_icon('plus-square') }}
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for list in lists %}
                    {% include 'list/list_item.html.jinja' %}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block scripts %}
    {{ super() }}
    <script nonce="{{ csp_nonce() }}">
        {% include 'td_cell.js' %}
        {% include 'scroll.js' %}
    </script>
{% endblock %}
