{% extends 'base.html.jinja' %}
{% from 'bootstrap/utils.html' import render_icon %}

{% block content %}
    <h4 class="text-center">
        <a class="text-dark text-decoration-none"
            href="{{ url_for('list.list') }}">
            {{ list.name }}
            <span class="text-secondary">
                {{ render_icon('ui-checks') }}
            </span>
        </a>
    </h4><hr>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-sm">
            <thead class="table-primary text-white">
                <tr>
                    <th class="col-11 align-middle">
                        Category
                        <a class="btn btn-primary btn-sm text-primary disabled">
                            {{ render_icon('plus-square') }}
                        </a>
                    </th>
                    <th class="col-1 align-middle text-center">
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    {% include 'list/category/category_item.html.jinja' %}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block scripts %}
    {{ super() }}
    <script nonce="{{ csp_nonce() }}">
        {% include 'list/category/category.js' %}
        {% include 'cancel.js' %}
        {% include 'scroll.js' %}
    </script>
{% endblock %}
