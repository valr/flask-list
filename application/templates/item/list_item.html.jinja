<tr>
    <th class="align-middle font-weight-normal">
        {{ ci[1].name }}
    </th>
    <td class="align-middle text-center">
        <div class="btn-group" role="group">
            <a class="btn btn-warning rounded text-white mr-2"
                href="{{ url_for('item.update', item_id=ci[1].item_id) }}">
