{% extends "base.html.jinja" %}
{% from "bootstrap5/form.html" import render_form %}
{% block content %}
    <div class="card mt-3 mb-0">
        <h5 class="card-header bg-warning text-white">
            Update Item
        </h5>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    {{ render_form(form, button_map={
                                        "submit": "warning", "cancel": "light"}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
{% block scripts %}
    {{ super() }}
    <script nonce="{{ csp_nonce() }}">{% include "cancel_action.js" %}</script>
{% endblock scripts %}
