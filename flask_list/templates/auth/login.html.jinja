{% extends "base.html.jinja" %}
{% from "bootstrap5/form.html" import render_form %}
{% block content %}
    <div class="card mt-3 mb-0">
        <h5 class="card-header">Sign In</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">{{ render_form(form, button_map={"submit": "primary"}) }}</div>
            </div>
        </div>
        <div class="card-footer text-muted">
            {% if registration_allowed == True %}
                <div class="mb-2">
                    <a href="{{ url_for('auth.register') }}">Register</a> as New User
                </div>
            {% endif %}
            <div>
                <a href="{{ url_for('auth.reset_password') }}">Reset Password</a>
            </div>
        </div>
    </div>
{% endblock content %}
