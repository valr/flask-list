{% extends "base.html.jinja" %}
{% from "bootstrap5/utils.html" import render_icon %}
{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-sm mt-3 mb-0">
            <thead class="table-primary text-white">
                <tr>
                    <th class="col-0 align-middle text-center text-nowrap">
                        <a class="btn btn-primary btn-sm rounded text-white"
                           href="{{ url_for('list.create') }}">
                            {{ render_icon("plus-square") }}
                        </a>
                    </th>
                    <th class="col-11 align-middle">List</th>
                    <th class="col-1 align-middle text-center text-nowrap">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for list in lists %}
                    {% do loop.index %} {# add loop in scope to avoid UndefinedError #}
                    {% include "list/read_row.html.jinja" %}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}
{% block scripts %}
    {{ super() }}
    <script nonce="{{ csp_nonce() }}">
        {% include "alert.js" %}
        {% include "debounce.js" %}
        {% include "scroll.js" %}
        {% include "td_cell.js" %}
        {% include "tooltip.js" %}
    </script>
{% endblock scripts %}
